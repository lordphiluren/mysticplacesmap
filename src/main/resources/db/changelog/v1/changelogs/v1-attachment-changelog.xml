<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="v1-1" author="Sushchenko Artyom">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName='attachment'/>
            </not>
        </preConditions>

        <createTable tableName='attachment'>
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="url" type="varchar">
                <constraints nullable="false" />
            </column>
        </createTable>
        <sql>
        <![CDATA[
            ALTER TABLE attachment ALTER COLUMN id ADD GENERATED BY DEFAULT AS IDENTITY;
            ]]>
        </sql>
    </changeSet>

    <changeSet id="v1-2" author="Artyom Sushchenko">
        <dropForeignKeyConstraint baseTableName="comment_attachment" constraintName="fk_attachment_comment"/>
        <dropForeignKeyConstraint baseTableName="place_attachment" constraintName="fk_attachment_place" />
        <dropTable tableName="attachment" />
    </changeSet>
</databaseChangeLog>