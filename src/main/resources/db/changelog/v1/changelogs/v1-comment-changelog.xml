<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="v1-1" author="Sushchenko Artyom">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="Comments"/>
            </not>
        </preConditions>

        <createTable tableName="Comments">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="message" type="varchar">
                <constraints nullable="false" />
            </column>
            <column name="created_at" type="timestamp" />
            <column name="creator_id" type="bigint" >
                <constraints foreignKeyName="fk_users_comments" referencedTableName="Users" referencedColumnNames="id" />
            </column>
            <column name="place_id" type="bigint">
                <constraints foreignKeyName="fk_places_comments" referencedTableName="Places" referencedColumnNames="id" />
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>