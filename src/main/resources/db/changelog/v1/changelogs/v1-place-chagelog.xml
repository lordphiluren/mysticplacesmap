<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="v1-1" author="Sushchenko Artyom">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="Places"/>
            </not>
        </preConditions>

        <createTable tableName="Places">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="varchar(128)">
                <constraints unique="true" nullable="false" />
            </column>
            <column name="short_description" type="varchar" />
            <column name="full_description" type="varchar" />
            <column name="how_to_get" type="varchar" />
            <column name="address" type="varchar" />
            <column name="rating" type="double" defaultValue="0"/>
            <column name="latitude" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar" />
            <column name="created_at" type="timestamp" />

            <column name="creator_id" type="bigint">
                <constraints foreignKeyName="fk_places_users" referencedTableName="Users" referencedColumnNames="id" />
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>