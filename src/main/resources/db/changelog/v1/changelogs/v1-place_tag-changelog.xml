<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="v1-1" author="Sushchenko Artyom">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="Place_Tag"/>
            </not>
        </preConditions>

        <createTable tableName="Place_Tag">
            <column name="place_id" type="bigint" />
            <column name="tag_id" type="bigint" />
        </createTable>
        <addPrimaryKey tableName="Place_Tag" columnNames="place_id, tag_id" constraintName="pk_place_tag"/>
        <addForeignKeyConstraint baseTableName="Place_Tag" baseColumnNames="place_id" constraintName="fk_place_tag"
                                 referencedTableName="Place"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"/>
        <addForeignKeyConstraint baseTableName="Place_Tag" baseColumnNames="tag_id" constraintName="fk_tag_place"
                                 referencedTableName="Tag"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"/>
    </changeSet>

</databaseChangeLog>