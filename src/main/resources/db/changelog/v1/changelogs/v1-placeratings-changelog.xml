<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="v1-1" author="Sushchenko Artyom">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="PlaceRating"/>
            </not>
        </preConditions>

        <createTable tableName="PlaceRating">
            <column name="user_id" type="bigint" />
            <column name="place_id" type="bigint" />
            <column name="rate" type="double">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="v1-1-add_primary_key" author="Sushchenko Artyom">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="PlaceRating"/>
            </not>
        </preConditions>

        <addPrimaryKey tableName="PlaceRating" columnNames="user_id, place_id" constraintName="pk_PlaceRating"/>
    </changeSet>

</databaseChangeLog>